<div class="container text-center">
  <div class="row">
    <h2>My Projects</h2>
    <hr>
    <% @projects.each do |project| %>
    <h3><a href="#"><%= link_to project.title, project %></a></h3>
    <p class="date"><%= project.created_at.strftime("%A, %b, %d") %></p>
    <div class"img-responsive"><%= image_tag(project.image.thumb.url) %></div>
    <% end %>
    <div class="view-button">
      <%= link_to "See More!", projects_path %>
    </div>
  </div>

  <div class="row">
    <h2>Blog</h2>
    <hr>
    <% @posts.each do |post| %>
    <h3><a href="#"><%= link_to post.title, post %></a></h3>
    <p class="date"><%= post.created_at.strftime("%A, %b, %d") %></p>
    <% end %>
    <div class="view-button">
      <%= link_to "See More!", posts_path %>
    </div>
  </div>


</div>
