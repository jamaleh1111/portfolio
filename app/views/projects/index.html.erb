<h1 id="page-title">My Projects</h1>
<div class="container text-center">
  <div class="row">
    <div class="content">
      <% @projects.each do |project| %>
        <div class="col-md-4">
          <h2><a href="#"><%= link_to project.title, project %></a></h2>
          <!-- <div class"img-responsive"><%= image_tag(project.image.thumb.url) %></div> -->
          <p class="date"><%= project.created_at.strftime("%A, %b, %d") %></p>
          <hr>
        </div>
      <% end %>
    </div>
  </div>

  <% if user_signed_in? %>
    <div>
      <%= link_to "New", new_project_path(@project) %>
    </div>
  <% end %>
</div>
