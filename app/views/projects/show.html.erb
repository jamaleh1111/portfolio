<div>
  <header>
    <h1><%= @project.title %></h1>
    <p><%= @project.created_at.strftime("%A, %b, %d") %></p>
    <hr>
  </header>

  <div>
    <%= markdown @project.description %>
    <div>
      <a href="<%= @project.link %>" class="project_button" target="_blank">Visit <%= @project.title %></a>
    </div>
  </div>
  <% if user_signed_in? %>
    <div>
      <%= link_to "Edit", edit_project_path(@project) %>
      <%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
    </div>
  <% end %>
  <hr>
</div>

<br>
