<div class="container text-center">
  <div class="row">
      <header>
        <h1><%= @project.title %></h1>
        <p class="date"><%= @project.created_at.strftime("%A, %b, %d") %></p>
        <hr>
      </header>

      <div class="col-md-6">
        <div class"img-responsive"><%= image_tag(@project.image.small.url) %></div>
      </div>
      <div class="col-md-6">
        <%= markdown @project.description %>
        <div class="view-button">
          <a href="<%= @project.link %>" class="project-button" target="_blank">Visit <%= @project.title %></a>
        </div>


        <% if user_signed_in? %>
          <div class="admin">
            <%= link_to "Edit", edit_project_path(@project) %>
            <%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
          </div>
        <% end %>
    </div>
  </div>
</div>

<br>
