<h1>Blog</h1>
<div>
  <% @posts.each do |post| %>
    <div>
      <h2><a href="#"><%= link_to post.title, post %></a></h2>
      <p><%= post.created_at.strftime("%A, %b, %d") %></p>
      <hr>
    </div>
  <% end %>
  <% if user_signed_in? %>
    <div>
      <%= link_to "New", new_post_path(@post) %>
    </div>
  <% end %>
</div>
<%= will_paginate @posts %>
