<div class="container text-center">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
  <header class="heading">
    <h1><%= @post.title %></h1>
    <p class="date"><%= @post.created_at.strftime("%A, %b, %d") %></p>
    <hr>
  </header>

  <div class="text-left">
    <p><%= markdown @post.content %></p>
  </div>
  <% if user_signed_in? %>
    <div class="admin">
      <%= link_to "Edit", edit_post_path(@post) %>
      <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>
    </div>
  <% end %>
<hr>
  <div class="share">
    <p>Share</p>
    <p id="share-post"><%= @post.title %></p>
    <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @jamalehg - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fa fa-twitter"></i>
    </a>
    <a  onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
    <a  onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= @post.title %> by @jamalehg - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fa fa-facebook"></i></a>
</div>
<hr>
 <%= render 'disqus' %>
<br>
</div>
</div>
</div>
